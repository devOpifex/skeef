{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
<div class="w-full">
  {{ if .Authenticated }}
    <a href="/admin" class="pt-2 text-xs float-right text-light underline px-4 z-50">Admin area</a>
  {{ end }}
  {{ if .Streaming }}
    <p class="font-light text-xs float-left pt-2 px-4">Number of tweets over time</p>
    <div id="trend"></div>
    <div id="graph" class="w-full focus:outline-none"></div>
    <p class="bottom-4 absolute left-4">
      <span class="px-4 pt-2 font-light"><span id="nedges" class="font-semibold">0</span> edges</span>
      <span class="px-4 pt-2 font-light"><span id="nnodes" class="font-semibold">0</span> nodes</span>
    </p>
  {{ else }}
    <div class="flex justify-center pt-12">
      <div class="bg-gray-900 px-4 py-6 rounded-md">
      {{ with .Flash.message }}
        <div>{{.}}</div>
      {{ end }}
        {{ if .Authenticated }}
          <p class="text-center w-full">
            It looks like you are the admin,
            <a href="/admin" class="text-light text-green-400 underline">start streaming.</a>
          </p>
        {{ end }}
      </div>
    </div>
  {{ end }}
</div>
{{end}}